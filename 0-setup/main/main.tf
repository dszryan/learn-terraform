##################################################################################
# CONFIGURATION - added for Terraform 0.14
##################################################################################
terraform {
  required_version = ">= 0.14"
}


##################################################################################
# PROVIDERS
##################################################################################
provider "google" {
  version = "~> 3.43.0"
  project = var.project
  region  = var.region
}

provider "google-beta" {
  version = "~> 3.43.0"
  project = var.project
  region  = var.region
}

